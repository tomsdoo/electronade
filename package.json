{
  "name": "electronade",
  "version": "1.0.0",
  "description": "",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "bin": {
    "electronade": "bin/electronade.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json && tsc --project tsconfig.bin.json",
    "fix-staged:src": "npm run lintfix:src && npm run format:src",
    "format:document": "npm run format:document:html && npm run format:document:css && npm run format:document:server",
    "format:document:css": "prettier --write docs/css/**/*.css",
    "format:document:html": "prettier --write docs/index.html",
    "format:document:server": "prettier --write doc_server.ts",
    "format:src": "prettier --write src/**/*.ts",
    "format:test": "prettier --write test/**/*.ts",
    "format": "npm run format:src && npm run format:document && npm run format:test",
    "lintfix": "npm run lintfix:src && npm run lintfix:test && npm run lintfix:document:server",
    "lintfix:src": "eslint --fix src/**/*.ts",
    "lintfix:test": "eslint --fix test/**/*.ts",
    "lintfix:document:server": "eslint --fix doc_server.ts",
    "prepare": "husky install",
    "serve:doc": "ts-node doc_server",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha -r ts-node/register \"test/**/*.ts\" --timeout 30000"
  },
  "lint-staged": {
    "src/**/*.ts": "npm run fix-staged:src",
    "docs/index.html": "npm run format:document:html",
    "docs/css/**/*.css": "npm run format:document:css",
    "doc_server.ts": "npm run format:document:server",
    "test/**/*.ts": "npm run format:test"
  },
  "keywords": [],
  "author": "tom",
  "license": "MIT",
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/koa": "^2.13.5",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.13",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "electron": "^20.0.2",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-vue": "^9.4.0",
    "husky": "^8.0.1",
    "koa": "^2.13.4",
    "koa-router": "^12.0.0",
    "koa-static-server": "^1.5.2",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "commander": "^9.4.0",
    "uuid": "^8.3.2"
  }
}
